<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog" >

	<HorizontalScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fillViewport="true"
		android:measureAllChildren="false"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scrollbars="none">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="8dp">
            <!--Image-->
			<LinearLayout
				android:id="@+id/ImageLayout"
				android:orientation="vertical"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:gravity="center"
				android:layoutDirection="ltr"
				android:background="?attr/selectableItemBackground">
				<LinearLayout
					android:id="@+id/ImageContainer"
					android:orientation="vertical"
					android:layout_width="59dp"
					android:layout_height="59dp"
					android:background="@drawable/circle_tintable"
					android:backgroundTint="#43A047"
					android:layout_gravity="center"
					android:gravity="center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/IconImage"
						android:text="Ic"
						android:gravity="center"
						android:textSize="20sp"
						android:textColor="@color/gnt_white"
						android:layout_gravity="center"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"
						android:layout_marginEnd="0dp"
						android:clickable="false"
						android:focusable="false" />
				</LinearLayout>
				<TextView
					android:id="@+id/NameImage"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="7dp"
					android:textSize="14sp"
                    android:text="@string/image"
					android:gravity="center"
					android:layout_gravity="center"
					android:includeFontPadding="false" />
			</LinearLayout>
			
            <!--Video-->
			<LinearLayout
				android:id="@+id/VideoLayout"
				android:orientation="vertical"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:gravity="center"
				android:layoutDirection="ltr"
				android:background="?attr/selectableItemBackground">
				<LinearLayout
					android:id="@+id/VideoContainer"
					android:orientation="vertical"
					android:layout_width="59dp"
					android:layout_height="59dp"
					android:background="@drawable/circle_tintable"
					android:backgroundTint="#1976D2"
					android:layout_gravity="center"
					android:gravity="center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/IconVideo"
						android:text="Ic"
						android:gravity="center"
						android:textSize="20sp"
						android:textColor="@color/gnt_white"
						android:layout_gravity="center"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"
						android:layout_marginEnd="0dp"
						android:clickable="false"
						android:focusable="false" />
				</LinearLayout>
				<TextView
					android:id="@+id/NameVideo"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="7dp"
					android:textSize="14sp"
                    android:text="@string/video"
					android:gravity="center"
					android:layout_gravity="center"
					android:includeFontPadding="false" />
			</LinearLayout>
			  
            <!--File-->
            <LinearLayout
              android:id="@+id/FileLayout"
              android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center"
              android:layoutDirection="ltr"
              android:background="?attr/selectableItemBackground">
              <LinearLayout
                android:id="@+id/FileContainer"
                android:orientation="vertical"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/circle_tintable"
                android:backgroundTint="#FFB300"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/IconFile"
                  android:text="Ic" 
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/gnt_white"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="0dp"
                  android:clickable="false"
                  android:focusable="false" />
              </LinearLayout>
              <TextView
                android:id="@+id/NameFile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="@string/Lbl_File" 
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false" />
            </LinearLayout>
             
            <!--Music-->
            <LinearLayout
              android:id="@+id/MusicLayout"
              android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center"
              android:layoutDirection="ltr"
              android:background="?attr/selectableItemBackground">
              <LinearLayout
                android:id="@+id/MusicContainer"
                android:orientation="vertical"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/circle_tintable"
                android:backgroundTint="#D81B60"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/IconMusic"
                  android:text="Ic"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/gnt_white"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="0dp"
                  android:clickable="false"
                  android:focusable="false" />
              </LinearLayout>
              <TextView
                android:id="@+id/NameMusic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="@string/Lbl_Music"
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false" />
            </LinearLayout>
             
            <!--Gif-->
            <LinearLayout
              android:id="@+id/GifLayout"
              android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center"
              android:layoutDirection="ltr"
              android:background="?attr/selectableItemBackground">
              <LinearLayout
                android:id="@+id/GifContainer"
                android:orientation="vertical"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/circle_tintable"
                android:backgroundTint="#8E24AA"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/IconGif"
                  android:text="Ic"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/gnt_white"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="0dp"
                  android:clickable="false"
                  android:focusable="false" />
              </LinearLayout>
              <TextView
                android:id="@+id/NameGif"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="@string/Lbl_Gif"
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false" />
            </LinearLayout>
             
            <!--Contact-->
            <LinearLayout
              android:id="@+id/ContactLayout"
              android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center"
              android:layoutDirection="ltr"
              android:background="?attr/selectableItemBackground">
              <LinearLayout
                android:id="@+id/ContactContainer"
                android:orientation="vertical"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/circle_tintable"
                android:backgroundTint="#00897B"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/IconContact"
                  android:text="Ic"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/gnt_white"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="0dp"
                  android:clickable="false"
                  android:focusable="false" />
              </LinearLayout>
              <TextView
                android:id="@+id/NameContact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="@string/Lbl_Contact"
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false" />
            </LinearLayout>
             
            <!--Location-->
            <LinearLayout
              android:id="@+id/LocationLayout"
              android:orientation="vertical"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="center"
              android:layoutDirection="ltr"
              android:background="?attr/selectableItemBackground">
              <LinearLayout
                android:id="@+id/LocationContainer"
                android:orientation="vertical"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:background="@drawable/circle_tintable"
                android:backgroundTint="#3949AB"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/IconLocation"
                  android:text="Ic"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/gnt_white"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="0dp"
                  android:clickable="false"
                  android:focusable="false" />
              </LinearLayout>
              <TextView
                android:id="@+id/NameLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:text="@string/Lbl_Location"
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false" />
            </LinearLayout>
            
		</LinearLayout>
	</HorizontalScrollView>

</LinearLayout>