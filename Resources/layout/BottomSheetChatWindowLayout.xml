<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="wrap_content">
	<!--Head Page -->
	<LinearLayout
		android:id="@+id/mainLayout"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:layout_height="20dp">
		<View
			android:layout_width="80dp"
			android:layout_height="4dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:background="?attr/colorDivider" />
	</LinearLayout>
	 
		<LinearLayout
			android:id="@+id/reactLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
			android:minHeight="70dp"
			android:weightSum="6"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonOne"
				android:layout_weight="1"
				android:background="?attr/selectableItemBackground"
				style="@style/ReactImageButton"/>
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonTwo"
				android:layout_weight="1"
				android:background="?attr/selectableItemBackground"
				style="@style/ReactImageButton"/>
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonThree"
				android:layout_weight="1"
				android:background="?attr/selectableItemBackground"
				style="@style/ReactImageButton"/>
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonFour"
				android:layout_weight="1"
				style="@style/ReactImageButton"
				android:background="?attr/selectableItemBackground"/>
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonFive"
				android:layout_weight="1"
				android:background="?attr/selectableItemBackground"
				style="@style/ReactImageButton"/>
			<ImageView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:minHeight="70dp"
				android:id="@+id/imgButtonSix"
				android:layout_weight="1"
				android:background="?attr/selectableItemBackground"
				style="@style/ReactImageButton"/>
		</LinearLayout>
	 
	<LinearLayout
		android:id="@+id/CopyLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/CopyIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/CopyText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Copy"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/MessageInfoLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/MessageInfoIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/MessageInfoText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_MessageInfo"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/DeleteMessageLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/DeleteMessageIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/DeleteMessageText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_DeleteMessage"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ReplyLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ReplyIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/ReplyText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Reply"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ForwardLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/ForwardIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/ForwardText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Forward"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/PinLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/PinIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/PinText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Pin"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/FavoriteLayout"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="8dp"
		android:padding="7dp"
		android:clickable="true"
		android:background="?attr/selectableItemBackground"
		android:gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/FavoriteIcon"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="Ic"
			android:textSize="20sp"
			android:layout_marginEnd="5dp"
			android:gravity="center" />
		<TextView
			android:id="@+id/FavoriteText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="15dp"
			android:text="@string/Lbl_Favorite"
			android:gravity="start|center"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:layout_marginBottom="0dp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="?android:attr/actionBarSize"/>

</LinearLayout>