<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFill"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:longClickable="false"
        android:animationCache="false"
        android:duplicateParentState="true"
        android:filterTouchesWhenObscured="true" >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/accent"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:scrimAnimationDuration="200"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="?attr/colorFill"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="220dp">
                    <ImageView
                        android:id="@+id/groupCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                       
                        android:src="@drawable/ImagePlacholder"
                        app:layout_collapseMode="pin" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                         android:background="@xml/gradientblack"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:id="@+id/btn_selectimage"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:backgroundTint="#90000000"
                            android:background="@drawable/shape_rectangle_blue_round_corner_signin_four"
                            android:tag="false"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="@string/Lbl_SelectImage"
                            android:textColor="@color/textLight_color"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:layout_gravity="center|center_vertical" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:popupTheme="@style/PopupMenuStyle"
                android:descendantFocusability="blocksDescendants"
                android:contentDescription="false"
                android:clickable="false"
                android:animationCache="false"
                android:keepScreenOn="false"></androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/Main_Linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="false"
            android:background="?attr/colorFill"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <View
                android:layout_height="25dp"
                android:layout_width="match_parent" />

              <LinearLayout
                android:id="@+id/LayoutEditText"
				android:orientation="horizontal"
                android:background="@drawable/shape_radius_btn"
                android:backgroundTint="?attr/colorDivider"
                android:layout_weight="10"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <com.aghajari.emojiview.view.AXEmojiEditText
                    android:id="@+id/groupName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="#888"
                    
                    android:layout_marginStart="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="7dp"
                    android:textSize="14dp"
                    android:inputType="textMultiLine|textShortMessage"
                    android:background="@android:color/transparent"
                    android:hint="@string/Lbl_GroupName"
                    android:imeOptions="actionSend" />
                <ImageView
                    android:id="@+id/emojiicon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="10dp" 
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_smile_vector" />
            </LinearLayout>

             <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userRecyler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:layout_marginStart="8dp" 
                    android:scrollbars="vertical"
                    android:layout_marginTop="8dp" />
         
            <!--Buttons Section -->
            <LinearLayout
                android:paddingTop="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/exitGroupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/Lbl_ExitGroup"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/accent"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteGroupButton"
                    android:layout_below="@+id/Resetbutton"
                    android:background="@drawable/follow_button_profile_friends_pressed"
                    android:layout_height="36dp"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:text="@string/Lbl_DeleteGroup"
                    android:textColor="@color/textLight_color"
                    android:textSize="12sp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!--Edit Button-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@color/textLight_color"
        app:backgroundTint="@color/accent" 
        app:fabSize="normal"
        app:fabCustomSize="50dp"
        app:tint="@color/gnt_white"
        app:elevation="3dp"
        app:rippleColor="@color/accent"
        android:src="@drawable/ic_tick" 
        android:layout_margin="@dimen/spacing_mlarge"
        app:layout_anchor="@id/appBarLayout"
        app:layout_anchorGravity="bottom|right|end" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
