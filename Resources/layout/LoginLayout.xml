<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="4dp"
        android:paddingTop="0dp"
        app:titleMarginStart="0dp"
        android:background="@drawable/chat_toolbar_bg_shadow"
        app:titleTextColor="@color/textLight_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <LinearLayout
            android:id="@+id/toolbarLayout"
            android:padding="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/BackButton"
                android:background="@drawable/custom_ripple"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="13dp"
                android:rotation="180"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_next" />
            <TextView
                android:layout_toEndOf="@+id/BackButton"
                android:id="@+id/toolbarText"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/Btn_Log_in"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/mainscrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/titile"
                android:layout_below="@+id/toolbar"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="29dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="60dp"
                android:textColor="@color/accent"
                android:layout_marginBottom="10dp"
                android:text="WoWonder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/descText"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="29dp"
                android:textSize="34dp"
                android:textStyle="bold"
                android:textColor="#3D4356"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/titile"
                android:text="@string/Lbl_WelcomeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_below="@+id/descText"
                android:id="@+id/mainLinearLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="0dp">
                <EditText
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:drawableStart="@drawable/icon_user_vector"
                    android:maxLines="1"
                    android:textColorHint="#9CA6BA"
                    android:textColor="@color/text_color"
                    android:hint="@string/Lbl_Username"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:id="@+id/usernamefield"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
                <View
                    android:background="#9CA6BA"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />
                <EditText
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="23dp"
                    android:padding="8dp"
                    android:drawableStart="@drawable/icon_lock_vector"
                    android:maxLines="1"
                    android:textColorHint="#9CA6BA"
                    android:hint="@string/Lbl_Password"
                    android:textColor="@color/text_color"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:id="@+id/passwordfield" />
                <View
                    android:background="#9CA6BA"
                    android:layout_height="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/Lbl_Forget_your_Password"
                    android:textColor="#3D4356"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:id="@+id/forgetpassButton" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_login"
                android:layout_below="@+id/mainLinearLayout"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    android:progressTint="@color/textLight_color" />
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@xml/background_signup"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:text="@string/Btn_Log_in"
                    android:textColor="@color/textLight_color"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:id="@+id/loginButton" />
            </RelativeLayout>
            <com.facebook.login.widget.LoginButton
                android:layout_below="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/fblogin_button"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rectangle_blue_round_corner_signin_four" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@+id/fblogin_button"
                android:background="@xml/background_login"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/Btn_LoginGoogle"
                android:textColor="#444"
                android:textSize="15sp"
                android:layout_marginBottom="3dp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/Googlelogin_button"
                android:drawableStart="@drawable/Icon_google_button" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@+id/Googlelogin_button"
                android:background="@drawable/background_signup"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/Btn_Sign_Up"
                android:textColor="@color/textLight_color"
                android:textSize="15sp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/signUpButton" />
            <LinearLayout
                android:layout_below="@+id/signUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center">
                <TextView
                    android:text="@string/Terms_of_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secTermTextView"
                    android:textColor="#3D4356"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="20dp" />
                <TextView
                    android:text="@string/Privacy_Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secPrivacyTextView"
                    android:textColor="#3D4356"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>