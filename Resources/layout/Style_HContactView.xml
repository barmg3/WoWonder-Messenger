<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="70dp" 
    android:gravity="center_vertical"
    android:paddingTop="@dimen/padding_list_row"
    android:paddingEnd="@dimen/padding_list_row" >
  <ImageView
    android:id="@+id/card_pro_pic"
    android:scaleType="centerCrop"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:focusable="false"
    android:clickable="false"
    android:src="@drawable/no_profile_image_circle"
    android:layout_marginStart="5dp" />
  <refractored.controls.CircleImageView
    android:id="@+id/ImageLastseen"
    android:layout_width="14dp"
    android:layout_height="14dp"
    app:civ_border_width="2dp"
    app:civ_border_color="@color/textLight_color"
    android:layout_alignBottom="@id/card_pro_pic"
    android:layout_marginBottom="1dp" 
    android:layout_marginStart="44dp"
    android:layout_above="@id/card_pro_pic"
    android:src="@drawable/Green_Online" />
  <TextView
    android:id="@+id/card_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:lines="1"  
    android:text="Mh wael anjo Mh wael anjo"
    android:drawablePadding="4dp"
    android:layout_marginStart="10dp"
    android:textSize="@dimen/msg_text_primary"
    android:textStyle="bold"
    android:clickable="false"
    android:layout_marginEnd="100dp" 
    android:layout_marginTop="1dp"
    android:paddingEnd="10dp"
    android:focusable="false"
    android:layout_toEndOf="@id/card_pro_pic"
    android:gravity="start"
    android:textAlignment="textStart" /> 
  <TextView
    android:id="@+id/card_dist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:lines="1"
    android:text="@string/Lbl_DefaultAbout"
    android:layout_toEndOf="@id/card_pro_pic"
    android:layout_below="@id/card_name"
    android:textColor="@color/text_color_in_between"
    android:textSize="@dimen/msg_text_secondary"
    android:layout_marginTop="4.5dp"
    android:layout_marginStart="10dp"
    android:focusable="false" 
    android:paddingEnd="10dp"
    android:clickable="false"
    android:gravity="start"
    android:layout_marginEnd="100dp" 
    android:textAlignment="textStart" /> 
  <androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:id="@+id/cont"
    android:textSize="13sp" 
    android:layout_alignParentEnd="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="8dp" 
    android:layout_marginTop="10dp" 
    android:background="@drawable/follow_button_profile_friends"
    android:tag="false"
    android:paddingStart="17dp"
    android:paddingEnd="17dp" 
    android:layout_gravity="top|center"
    android:gravity="center" 
    android:textAlignment="center"
    android:textAllCaps="false"
    android:text="@string/Lbl_Follow"
    android:textColor="@color/accent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/colorDivider"
        android:layout_below="@id/card_pro_pic" />
</RelativeLayout>