<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:clickable="true"
    android:focusable="true">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="false"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="11dp"
                android:layout_marginStart="13dp"
                android:id="@+id/SectionName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/Lbl_YourStory"
                android:textSize="16dp" />
            <RelativeLayout
                android:id="@+id/addNewLayout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/social_bg_shadow"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <RelativeLayout
                    android:id="@+id/rlMain"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ivUser"
                                android:layout_width="55dp"
                                android:layout_height="55dp" 
                                android:scaleType="centerCrop"
                                android:src="@drawable/no_profile_image_circle" />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:src="@drawable/social_ic_add"
                                android:background="@drawable/social_bg_radius"
                                android:layout_alignParentEnd="true"
                                android:tint="@color/textLight_color"
                                android:padding="2dp"
                                android:layout_alignParentBottom="true" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/tvDuration"
                        android:layout_toEndOf="@+id/card"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/Lbl_Status"
                            android:textSize="16dp" />
                        <TextView
                            android:id="@+id/tvChatMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginTop="1dp"
                            android:textColor="#888"
                            android:textSize="13dp"
                            android:text="@string/Lbl_Addnewstory" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:textSize="14dp" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginStart="13dp"
                android:id="@+id/SectionName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/Lbl_Friends"
                android:textSize="16dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler"
                android:layout_marginTop="8dp"
                android:background="@drawable/social_bg_shadow"
                android:clickable="true"
                android:focusable="false" 
                tools:listitem="@layout/Style_HStoryView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />
            <ViewStub
              android:id="@+id/viewStub"
              android:inflatedId="@+id/subView"
              android:layout="@layout/EmptyStateLayout"
              android:layout_width="match_parent"
              android:layout_centerVertical="true"
              android:layout_height="300dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <com.google.android.gms.ads.doubleclick.PublisherAdView
	            android:id="@+id/multiple_ad_sizes_view"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
	            app:adUnitId="@string/banner_multiple_ad_sizes_id" />
            <View
	            android:layout_width="match_parent"
	            android:layout_height="15dp"/>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>