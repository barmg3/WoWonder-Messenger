<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto" 
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/storyDisplay"
	android:layout_marginBottom="0dp"
	android:orientation="vertical">
	<ImageView
		android:id="@+id/imageBlur"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="0dp"
		android:scaleType="centerCrop"  />

	<ImageView
		android:id="@+id/imagstoryDisplay"
		android:src="@drawable/imageplacholder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="500dp"
		android:gravity="center"
		android:layout_gravity="center"
		android:layout_centerInParent="true" />
	
	<com.google.android.exoplayer2.ui.PlayerView
		android:id="@+id/player_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		app:resize_mode="fixed_width"
		app:use_controller="false"
		app:rewind_increment="3000"
		app:fastforward_increment="3000"
		app:auto_show="true"
		app:surface_type="surface_view"
		app:controller_layout_id="@layout/exo_playback_control_view"
		app:played_color="@android:color/transparent"
		app:scrubber_color="@android:color/transparent"
		app:show_timeout="1000"
		app:shutter_background_color="@android:color/transparent"
		app:unplayed_color="@android:color/transparent"/>


	<LinearLayout
		android:id="@+id/actions"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:baselineAligned="false"
		android:orientation="horizontal"
		android:visibility="visible">

		<View
			android:id="@+id/reverse"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical" />

		<View
			android:id="@+id/center"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="4"
			android:orientation="vertical" />

		<View
			android:id="@+id/skip"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/story_body_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_gravity="center|bottom"
		android:background="@xml/gradientblack"
		android:orientation="vertical">

		<TextView
			android:id="@+id/story_body"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="bottom"
			android:gravity="center"
			android:padding="16dp"
			android:visibility="gone"
			android:textColor="@color/textLight_color"
			android:textSize="13sp"  />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center|bottom"
			android:layout_marginBottom="0dp">

			<LinearLayout
				android:id="@+id/open_seen_list_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:clickable="true"
				android:gravity="center"
				android:visibility="invisible"
				android:orientation="horizontal"
				android:padding="16dp">

				<TextView
					android:id="@+id/iconSeen"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:text="Ic"
					android:textSize="18sp"
					android:gravity="center"
					android:textColor="@color/textLight_color" />

				<TextView
					android:id="@+id/seen_counter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:textSize="14sp"
					android:gravity="center"
					android:textStyle="bold"
					android:textColor="@color/textLight_color"/>

			</LinearLayout>
			 
			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fillViewport="true"
				android:measureAllChildren="false"
				android:scrollbars="none">

				<LinearLayout
					android:id="@+id/open_reply"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:padding="8dp">

					<LinearLayout
						android:id="@+id/send_message_panel"
						android:layout_width="210dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="4dp"
						android:layout_marginEnd="4dp"
						android:backgroundTint="#d8444444"
						android:background="@drawable/shape_radius_btn"
						android:orientation="horizontal"
						android:padding="4dp"
						android:visibility="visible">

						<TextView
							android:id="@+id/postText"
							android:clickable="false"
							android:layout_toEndOf="@+id/image"
							android:layout_width="155dp"
							android:background="?attr/selectableItemBackground"
							android:layout_height="match_parent"
							android:layout_gravity="center"
							android:layout_marginStart="8dp"
							android:layout_marginEnd="2dp"
							android:gravity="center_vertical"
							android:layout_centerVertical="true"
							android:textColor="@color/gnt_white"
							android:paddingStart="13dp"
							android:paddingEnd="10dp"
							android:lines="1"
							android:text="@string/Lbl_SendMessage"
							android:textSize="13sp" />

						<ImageView
							android:id="@+id/sendMessageButton"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:background="@drawable/circlegradient"
							android:enabled="false"
							android:gravity="center"
							android:padding="5dp"
							android:tint="@color/gnt_white"
							android:src="@drawable/ic_send_vector" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/reactLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:minHeight="70dp"
						android:weightSum="6"
						android:orientation="horizontal">
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonOne"
							android:layout_weight="1"
							android:background="?attr/selectableItemBackground"
							style="@style/ReactImageButton"/>
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonTwo"
							android:layout_weight="1"
							android:background="?attr/selectableItemBackground"
							style="@style/ReactImageButton"/>
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonThree"
							android:layout_weight="1"
							android:background="?attr/selectableItemBackground"
							style="@style/ReactImageButton"/>
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonFour"
							android:layout_weight="1"
							style="@style/ReactImageButton"
							android:background="?attr/selectableItemBackground"/>
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonFive"
							android:layout_weight="1"
							android:background="?attr/selectableItemBackground"
							style="@style/ReactImageButton"/>
						<ImageView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:minWidth="70dp"
							android:minHeight="70dp"
							android:id="@+id/imgButtonSix"
							android:layout_weight="1"
							android:background="?attr/selectableItemBackground"
							style="@style/ReactImageButton"/>
					</LinearLayout>
					
				</LinearLayout>

			</HorizontalScrollView>

		</FrameLayout>

	</LinearLayout>

</FrameLayout>