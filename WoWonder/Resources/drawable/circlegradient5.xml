<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item>
    <shape android:shape="oval" >
      <gradient
        android:angle="360"
        android:startColor="#EC4855"
        android:endColor="#D02F3C"
        android:type="linear" />
      <size android:width="24dp"
            android:height="24dp"/>
    </shape>
  </item>

  <item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
    <shape android:shape="oval" >
      <gradient
        android:angle="360"
        android:startColor="#EC4855"
        android:endColor="#D02F3C"
        android:type="linear" />
    </shape>
  </item>

</layer-list>