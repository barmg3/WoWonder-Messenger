<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/mainscrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="top"
                android:layout_margin="5dp"
                android:layout_gravity="top"
                android:src="@drawable/ChatHeads" />
            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_TurnOnChatHeads"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <TextView
                android:id="@+id/subTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_EnableChatHead_SubTitle1"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/text_color_in_between" />
            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/subTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_EnableChatHead_SubTitle3"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/text_color_in_between" />
            <View
                android:layout_width="0dp"
                android:layout_height="35dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goToSettingsButton"
                android:layout_below="@+id/Resetbutton"
                android:background="@drawable/follow_button_profile_friends_pressed"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/Lbl_GoToSettings"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:clickable="true"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/notNowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/Lbl_NotNow"
                android:textSize="12sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:clickable="true"
                android:textColor="@color/accent"
                android:textAllCaps="true"
                android:layout_marginEnd="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>