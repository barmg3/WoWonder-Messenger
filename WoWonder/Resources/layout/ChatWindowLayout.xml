<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootChatWindowView"
    android:background="?attr/colorFill"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="4dp"
        android:paddingTop="0dp"
        app:titleMarginStart="0dp"
        android:background="@drawable/chat_toolbar_bg_shadow"
        app:titleTextColor="@color/textLight_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <RelativeLayout
            android:padding="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/BackButton"
                android:background="@drawable/custom_ripple"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="13dp"
                android:rotation="180"
                android:tint="?attr/colorHint"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_next" />
            <refractored.controls.CircleImageView
                android:id="@+id/userProfileImage"
                android:layout_marginStart="42dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="1dp"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/accent"
                android:padding="0dp"
                android:src="@drawable/places_ic_clear" />
            <!--<ImageView
                android:id="@+id/userProfileImage"
                android:scaleType="centerCrop"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="2.8dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/no_profile_image_circle" />-->
            <TextView
                android:id="@+id/Txt_Username"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3.5dp"
                android:layout_toEndOf="@id/userProfileImage"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/Txt_last_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#888"
                android:layout_below="@+id/Txt_Username"
                android:layout_toEndOf="@id/userProfileImage"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="11sp" />
            <ImageView
                android:id="@+id/IconMore"
                android:background="@drawable/custom_ripple"
                android:layout_alignParentEnd="true"
                android:layout_height="17dp"
                android:layout_width="17dp"
                android:layout_marginEnd="12dp"
                android:tint="?attr/colorHint"
                android:src="@drawable/icon_more_vector"
                android:layout_gravity="center"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/IconvideoCall"
                android:background="@drawable/custom_ripple"
                android:layout_height="21dp"
                android:layout_width="21dp"
                android:layout_marginEnd="19dp"
                android:tint="?attr/colorHint"
                android:layout_toStartOf="@+id/IconMore"
                android:src="@drawable/icon_video_camera_vector"
                android:layout_gravity="center"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/IconCall"
                android:background="@drawable/custom_ripple"
                android:layout_height="19dp"
                android:layout_toStartOf="@+id/IconvideoCall"
                android:layout_width="19dp"
                android:layout_marginEnd="19dp"
                android:tint="?attr/colorHint"
                android:src="@drawable/icon_phone_vector"
                android:layout_gravity="center"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layoutDirection="ltr"
        android:layout_weight="1">
	    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyler" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:paddingBottom="5dp"
            app:stackFromEnd="true" />
	    <include
		    android:id="@+id/pin_message_view"
		    layout="@layout/PinnedMessageViewLayout" 
		    android:visibility="gone" /> 
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:id="@+id/fab_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:clickable="true"
            app:elevation="3dp"
            android:visibility="gone"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/accent"
            app:tint="@color/gnt_white"
            android:src="@drawable/icon_expand_vector"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            app:backgroundTint="@color/accent"
            app:fabSize="mini"
            android:layout_marginBottom="10dp" />
	    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/Loading_LinearLayout"
		    android:visibility="gone"
		    android:layout_marginTop="20dp"
		    android:layout_centerInParent="true"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center">
		    <ProgressBar
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/progressBar"
			    android:layout_centerInParent="true"
			    android:indeterminate="true"
			    android:gravity="center"
			    android:layout_gravity="center"
			    android:progressTint="@color/textLight_color" />
		    <TextView
			    android:id="@+id/Txt_Start_Loading"
			    android:layout_width="wrap_content"
			    android:textSize="15dp"
			    android:textStyle="normal"
			    android:layout_centerInParent="true"
			    android:text="@string/Lbl_Loading"
			    android:layout_height="wrap_content"
			    android:typeface="normal"
			    android:gravity="center"
			    android:layout_gravity="center"
			    android:layout_marginTop="10dp" />
	    </LinearLayout>
        <RelativeLayout
            android:id="@+id/SayHiLayout"
            android:layout_centerHorizontal="true"
			
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/shape_circle_with_shadow"
                android:backgroundTint="#FFEEEF"
                android:layout_width="80dp"
                android:translationX="-50dp"
                android:translationY="90dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@+id/centercircle"
                android:layout_above="@+id/centercircle" />
            <View
                android:background="@drawable/shape_circle_with_shadow"
                android:backgroundTint="#E5F3FE"
                android:layout_width="80dp"
                android:translationX="50dp"
                android:translationY="-90dp"
                android:layout_height="80dp"
                android:layout_toStartOf="@+id/centercircle"
                android:layout_below="@+id/centercircle" />
            <RelativeLayout
                android:id="@+id/centercircle"
                android:layout_centerInParent="true"
                android:layout_width="165dp"
                android:layout_height="165dp">
                <View
                    android:background="@drawable/shape_circle_with_shadow"
                    android:backgroundTint="?attr/colorFill"
                    android:layout_width="163dp"
                    android:layout_height="163dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
					android:gravity="center_horizontal"
                    android:orientation="vertical"> 
	                <ImageView
		                android:id="@+id/hiImage"  
		                android:src="@drawable/icon_handshake_vector"
		                android:layout_width="45dp"
		                android:layout_marginBottom="1dp"
		                android:layout_height="45dp" />
	                <TextView
		                android:id="@+id/normalText"
		                android:text="@string/Lbl_SayHiTo"
		                android:textSize="12dp"
		                android:layout_marginTop="1dp"
		                android:translationY="4dp" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content" />
	                <TextView
		                android:id="@+id/toUserText" 
		                android:text="@string/Lbl_SayHiTo"
		                android:textSize="13dp"
		                android:layout_marginTop="8dp"
		                android:textStyle="bold" 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content" /> 
                </LinearLayout> 
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerHiSuggetions"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scrollbars="none"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:scrollingCache="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/firstLiner"
        android:background="?attr/colorFill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/TopFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorFill"
            android:layout_gravity="center"
            android:layout_centerVertical="false"
            android:layout_alignParentBottom="true"
            android:translationY="400dp" />
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/banner_ad_unit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <include
            android:id="@+id/replied_message_view"
            layout="@layout/RepliedMessageViewLayout"
            android:visibility="gone" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/firstBoxonButtom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="11"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:background="?attr/colorFill"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mediaButton"
                    android:tag="attachment"
                    android:layout_weight="0.1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:maxHeight="21dp"
                    android:maxWidth="21dp"
                    android:layout_marginStart="9dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/icon_attach_vector" />
              <!--  <ImageView
                    android:id="@+id/stickerButton"
                    android:layout_weight="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:visibility="gone"
                    android:layout_marginStart="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/stickerattach" />-->
<!--                <ImageView
                    android:id="@+id/colorButton"
                    android:layout_weight="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:visibility="gone"
                    android:layout_marginStart="7dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/colorAttach" />-->
                <LinearLayout
                    android:id="@+id/LayoutEditText"
                    android:background="@drawable/Shape_Radius_Btn"
                    android:layout_weight="10"
                    android:orientation="horizontal"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
	                <com.aghajari.emojiview.view.AXEmojiEditText
		                android:id="@+id/EmojiconEditText5" 
		                android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:textColorHint="#888" 
	                    android:layout_marginStart="3dp"
	                    android:paddingEnd="5dp"
	                    android:paddingStart="7dp"
	                    android:textSize="14dp"
	                    android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
	                    android:background="@android:color/transparent"
	                    android:hint="@string/Lbl_Write_your_message"
	                    android:imeOptions="actionSend" />
                    <ImageView
                        android:id="@+id/emojiicon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_smile_vector" />
                </LinearLayout> 
                <WoWonder.Library.Anjo.XRecordView.RecordButton 
	                android:id="@+id/record_button"
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_gravity="end|center" 
	                android:background="@drawable/recv_bg_mic"
	                android:backgroundTint="?attr/colorPrimary"
	                android:layout_weight="0"
	                android:layout_marginStart="5dp"   
	                android:layout_marginEnd="5dp"   
	                android:scaleType="centerInside"
	                app:mic_icon="@drawable/icon_mic_vector" />
            </LinearLayout>
            <WoWonder.Library.Anjo.XRecordView.RecordView
                android:id="@+id/record_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start|center"
                android:layout_marginEnd="55dp"
                android:layout_toStartOf="@+id/record_button"
                app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                app:slide_to_cancel_arrow_color="#9E9E9E"
                app:slide_to_cancel_bounds="10dp"
                app:slide_to_cancel_margin_right="10dp"
                app:slide_to_cancel_text="@string/Lbl_SlideToCancelAudio"
                app:counter_time_color="#ff0000" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/ButtomFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorFill"
            android:layout_gravity="center"
            android:layout_centerVertical="false"
            android:layout_alignParentBottom="true"
            android:translationY="400dp" />
    </LinearLayout>
</LinearLayout>