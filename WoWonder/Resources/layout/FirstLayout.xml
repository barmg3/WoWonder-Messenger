
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="#00000000">
    <ImageView
        android:id="@+id/Imageplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/> 
    <ImageView
        android:layout_above ="@+id/mainText"
        android:id="@+id/Logoplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:maxWidth="200dp"
        android:minHeight="80dp"
        android:minWidth="100dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/logo"  /> 

    <TextView
        android:id ="@+id/mainText"
        android:layout_marginStart="31dp"
         android:layout_marginEnd="29dp"
        android:textStyle="bold"
        android:textSize="34dp"
         android:textColor="@color/textLight_color"
         android:layout_marginBottom="10dp"
         android:layout_above ="@+id/descText"
        android:text="Instantly Messaging, The Best You Can Get!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   
       <TextView
        android:id="@+id/descText"
        android:layout_marginStart="31dp"
         android:layout_marginEnd="29dp"
        android:textSize="15dp"
        android:textColor="@color/textLight_color"
        android:layout_marginBottom="40dp"
        android:layout_above ="@+id/buttonlayout"
        android:text="Meet new people, Find friends nearby."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"> 
         

        <androidx.appcompat.widget.AppCompatButton
            android:text="@string/Lbl_ContinueAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ContinueButton"
			android:background="@xml/background_signup" 
            android:textColor="@color/textLight_color"
            android:layout_marginTop="8dp"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />
         <androidx.appcompat.widget.AppCompatButton
            android:text="@string/Lbl_LogIntoAnotherAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LogIntoButton"
            android:background="@xml/background_login"
            android:layout_marginTop="10dp"
            android:textSize="15dp" 
            android:textColor="@android:color/black"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp" />

        <TextView
          android:id="@+id/TermsText"
          android:layout_marginStart="0dp"
          android:layout_marginEnd="0dp"
          android:textSize="14dp"
          android:layout_marginTop="12dp"
          android:textColor="@color/textLight_color"
          android:layout_marginBottom="8dp"
          android:layout_above ="@+id/buttonlayout"
          android:text="Terms and Conditions"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
        <View
            android:layout_height="50dp"
            android:layout_width="match_parent" />
    </LinearLayout>
</RelativeLayout>