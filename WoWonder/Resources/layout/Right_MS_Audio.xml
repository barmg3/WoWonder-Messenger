<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/main"
                android:paddingEnd="3dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/chat_rounded_right_layout"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_layout"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginTop="3dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="3dp">
        <include
	        android:id="@+id/ForwardLayout"
	        layout="@layout/ForwardMessageViewLayout" 
	        android:visibility="gone" /> 
        
        <include
	        android:id="@+id/replied_message_view"
	        layout="@layout/RepliedMessageViewLayout" 
	        android:visibility="gone" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:minHeight="65dp"
            android:gravity="end"
            android:layout_gravity="end">
            <FrameLayout
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <at.markushi.ui.CircleButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cb_color="?attr/colorAccent"
                    app:cb_pressedRingWidth="0dip"
                    android:tint="#efefef"
                    android:src="@drawable/icon_play_vector"
                    android:id="@+id/playButton"
                    android:tag="Play"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical" />
                <ProgressBar
                  android:id="@+id/loadingProgressview"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:max="100"
                  android:progress="0"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:visibility="gone"
                  android:indeterminateTint="#efefef"
                  android:indeterminate="true" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
	            <androidx.appcompat.widget.AppCompatSeekBar
		            android:id="@+id/seek_song_progressbar"
		            android:layout_width="match_parent"
		            android:layout_height="40dp"
		            android:progress="0"
		            android:progressTint="#ff000000"
		            android:secondaryProgressTint="#cccccc"
		            android:indeterminateTint="#ffffa500"
		            android:progressBackgroundTint="#ff000000"
		            android:thumbTint="@color/accent"
		            android:theme="@style/MySeekBar" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Duration"
                        android:textSize="11dp"
                        android:text="00:00"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:textColor="@color/textLight_color"
                        android:layout_gravity="start|center" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:textSize="11dp"
                        android:layout_marginStart="5dp"
                        android:gravity="end|center"
                        android:textColor="@color/textLight_color"
                        android:layout_gravity="end|center" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/starIcon"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            app:lottie_loop="false"
                            android:layout_centerInParent="true"
                            app:lottie_fileName="FavAnim.json" />
                        <ImageView
                            android:id="@+id/fav"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_fav_post_vector"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:padding="2dp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_height="match_parent"
                        android:id="@+id/seen" 
                        android:layout_weight="1"
                        android:textColor="@color/textLight_color"
                        android:textSize="11dp"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:text="Ic"
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/countLikeSection"
    android:layout_alignStart="@+id/bubble_layout"
    android:layout_below="@+id/bubble_layout"
    android:layout_width="wrap_content" 
    android:visibility="gone"
    android:clickable="true"
    android:translationY="-5dp"
    android:gravity="center"
    android:backgroundTint="?attr/colorFill"
    android:background="@drawable/shape_radius_btn"
    android:layout_height="20dp">
    <ImageView
      android:id="@+id/ImagecountLike"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:src="@drawable/emoji_love"
      android:layout_margin="5dp"
      android:scaleType="centerCrop" />
  </LinearLayout>
</RelativeLayout>