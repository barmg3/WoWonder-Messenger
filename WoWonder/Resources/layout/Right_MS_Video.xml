<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:gravity="end"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main">
    <LinearLayout
      android:orientation="vertical"
      android:id="@+id/bubble_layout"
      android:layout_marginStart="3dp"
      android:layout_marginEnd="3dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/chat_rounded_right_layout">
        <include
	        android:id="@+id/ForwardLayout"
	        layout="@layout/ForwardMessageViewLayout" 
	        android:visibility="gone" /> 
        
        <include
	        android:id="@+id/replied_message_view"
	        layout="@layout/RepliedMessageViewLayout" 
	        android:visibility="gone" />
        <FrameLayout
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgDisplay"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/imageplacholder"
                android:adjustViewBounds="true" />
            <LinearLayout
                android:id="@+id/shadowLiner"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="2dp" 
                android:weightSum="5"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@xml/radius_corner_shape">
                <TextView
                    android:id="@+id/icon"
                    android:textColor="@color/textLight_color"
                    android:layout_marginEnd="0dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:gravity="start"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/fileName"
                    android:textColor="@color/textLight_color"
                    android:layout_marginEnd="0dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:layout_centerInParent="true"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:text="...mp4"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/time"
                    android:textColor="@color/textLight_color"
                    android:layout_marginEnd="0dp"
                    android:textSize="10sp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_centerInParent="true"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:text="10:00 PM"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0dp"
                    android:layout_centerInParent="true"
                    android:gravity="start|center"
                    android:layout_gravity="start|center">
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/starIcon"
                        android:layout_marginBottom="3dp"
                        android:layout_centerInParent="true"
                        android:gravity="start|center"
                        android:layout_gravity="start|center"
                        android:scaleType="fitCenter"
                        app:lottie_loop="false"
                        app:lottie_fileName="FavAnim.json" />
                    <ImageView
                        android:id="@+id/fav"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_fav_post_vector"
                        android:layout_centerInParent="true"
                        android:gravity="start|center"
                        android:layout_gravity="start|center"
                        android:padding="2dp" />
                </RelativeLayout>
                <TextView
                  android:layout_height="match_parent"
                  android:id="@+id/seen"
                  android:textColor="@color/textLight_color"
                  android:textSize="14dp"
                  android:layout_centerInParent="true"
                  android:gravity="start|center"
                  android:layout_gravity="start|center"
                  android:text="Ic"
                  android:layout_marginTop="3dp"
                  android:layout_marginEnd="2dp"
                  android:layout_marginBottom="3dp"
                  android:layout_width="wrap_content"
                  android:layout_weight="1" />
            </LinearLayout>
            <ProgressBar
              android:id="@+id/loadingProgressview"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_centerVertical="true"
              android:max="100"
              android:visibility="gone"
              style="@style/Widget.AppCompat.ProgressBar.Horizontal"
              android:layout_marginEnd="1dp"
              android:layout_marginStart="1dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_centerHorizontal="true"
              android:progressDrawable="@drawable/draw_custom_progressbar" 
              android:progress="0"
              android:progressBackgroundTint="@color/textLight_color" />
            <TextView
              android:id="@+id/textErrorLoading"
              android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:layout_centerVertical="true"
              android:visibility="gone"
              android:textSize="16sp"
              android:drawableStart="@drawable/icon_upload_vector"
              android:drawablePadding="10dp"
              android:text="@string/Lbl_RetryAgain"
              android:background="@drawable/bg_replied_msg" 
              android:textColor="@color/textLight_color"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_centerHorizontal="true" />
            <TextView
              android:id="@+id/textDownload"
              android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:layout_centerVertical="true"
              android:visibility="gone"
              android:textSize="16sp"
              android:drawableStart="@drawable/icon_download_vector"
              android:drawablePadding="10dp"
              android:text="@string/Lbl_Download"
              android:background="@drawable/bg_replied_msg" 
              android:textColor="@color/textLight_color"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_centerHorizontal="true" />
            <at.markushi.ui.CircleButton
                android:id="@+id/playButton"
                android:layout_width="55dip"
                android:layout_height="55dip"
                app:cb_color="#A6000000"
                app:cb_pressedRingWidth="1dip"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:translationY="-6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_play_vector" />
        </FrameLayout>
    </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/countLikeSection"
    android:layout_alignStart="@+id/bubble_layout"
    android:layout_below="@+id/bubble_layout"
    android:layout_width="wrap_content" 
    android:visibility="gone"
    android:clickable="true"
    android:translationY="-5dp"
    android:gravity="center"
    android:backgroundTint="?attr/colorFill"
    android:background="@drawable/shape_radius_btn"
    android:layout_height="20dp">
    <ImageView
      android:id="@+id/ImagecountLike"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:src="@drawable/emoji_love"
      android:layout_margin="5dp"
      android:scaleType="centerCrop" />
  </LinearLayout>
</RelativeLayout> 