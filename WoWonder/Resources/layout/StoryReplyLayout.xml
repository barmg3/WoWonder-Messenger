<?xml version="1.0" encoding="utf-8"?>
<WoWonder.Library.Anjo.Stories.DragView.DragToClose xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:drag="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drag_to_close"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    drag:closeOnClick="true"
    drag:draggableContainer="@+id/reply_story"
    drag:draggableView="@+id/drag">
    <LinearLayout
        android:id="@+id/reply_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/drag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@drawable/chat_rounded_left_layout"
            android:paddingTop="7dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingBottom="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/TopFragmentHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorFill"
                android:layout_gravity="center"
                android:layout_centerVertical="false"
                android:layout_alignParentBottom="true"
                android:translationY="400dp" />
            <include
                android:id="@+id/replied_message_view"
                layout="@layout/RepliedMessageViewLayout"
                android:visibility="visible" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/firstBoxonButtom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="11"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/mediaButton"
                        android:tag="attachment"
                        android:layout_weight="0.1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:maxHeight="21dp"
                        android:maxWidth="21dp"
                        android:layout_marginStart="9dp"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:tint="#444444"
                        android:src="@drawable/icon_attach_vector" /> 
                    <LinearLayout
                        android:id="@+id/LayoutEditText"
                        android:background="@drawable/Shape_Radius_Btn"
                        android:layout_weight="10"
                        android:orientation="horizontal"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        <com.aghajari.emojiview.view.AXEmojiEditText
                            android:id="@+id/EmojiconEditText5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColorHint="#888"
                            
                            android:layout_marginStart="3dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="7dp"
                            android:textSize="14dp"
                            android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
                            android:background="@android:color/transparent"
                            android:hint="@string/Lbl_Write_your_message"
                            android:imeOptions="actionSend" />
                        <ImageView
                            android:id="@+id/emojiicon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:padding="10dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_smile_vector" />
                    </LinearLayout>
                    <WoWonder.Library.Anjo.XRecordView.RecordButton
                        android:id="@+id/record_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end|center"
                        android:background="@drawable/recv_bg_mic"
                        android:backgroundTint="@color/accent"
                        android:layout_weight="0"
                        android:layout_marginStart="5dp"
                        android:scaleType="centerInside"
                        app:mic_icon="@drawable/icon_mic_vector" />
                </LinearLayout>
                <WoWonder.Library.Anjo.XRecordView.RecordView
                    android:id="@+id/record_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginEnd="55dp"
                    android:layout_toStartOf="@+id/record_button"
                    app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                    app:slide_to_cancel_arrow_color="#9E9E9E"
                    app:slide_to_cancel_bounds="10dp"
                    app:slide_to_cancel_margin_right="10dp"
                    app:slide_to_cancel_text="@string/Lbl_SlideToCancelAudio"
                    app:counter_time_color="#ff0000" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/ButtomFragmentHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorFill"
                android:layout_gravity="center"
                android:layout_centerVertical="false"
                android:layout_alignParentBottom="true"
                android:translationY="400dp" />
        </LinearLayout>
    </LinearLayout>
</WoWonder.Library.Anjo.Stories.DragView.DragToClose>