<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="72dp"
	android:paddingStart="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_list_row"
    android:paddingTop="@dimen/padding_list_row">
	<refractored.controls.CircleImageView
        android:id="@+id/profile_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="20dp"
        android:padding="20dp"
        android:background="@drawable/social_bg_circle_dotted"
        android:src="@drawable/Grey_Offline"
        android:layout_gravity="start|center_vertical"
        android:gravity="start|center_vertical"
        android:layout_marginStart="0dp"
        android:layout_margin="0dp" />
    <ImageView
        android:id="@+id/userProfileImage"
        android:scaleType="centerCrop"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="2.8dp"
        android:layout_gravity="start|center_vertical"
        android:gravity="start|center_vertical"
        android:background="@drawable/no_profile_image_circle" />
    <TextView
        android:id="@+id/Txt_Username"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/userProfileImage"
        android:layout_gravity="start|center_vertical"
        android:gravity="start|center_vertical"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/Txt_last_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textColor="#888"
        android:layout_below="@+id/Txt_Username"
        android:layout_toEndOf="@id/userProfileImage"
        android:layout_gravity="start|center_vertical"
        android:gravity="start|center_vertical"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/colorDivider"
        android:layout_below="@id/userProfileImage" />
</RelativeLayout>