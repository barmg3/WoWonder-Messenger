<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:background="?attr/colorPrimary">
            <RelativeLayout
                android:id="@+id/secoundrelative"
                android:layout_width="match_parent"
                android:layoutDirection="ltr"
                android:layout_height="250dp">
                <com.github.florent37.diagonallayout.DiagonalLayout
                    android:id="@+id/diagonalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentStart="true"
                    android:elevation="10dp"
                    app:diagonal_angle="10"
                    android:layoutDirection="ltr"
                    app:diagonal_position="top"
                    app:diagonal_direction="right">
                    <ImageView
                        android:id="@+id/coverImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/Cover_image" />
                    <TextView
                        android:id="@+id/Txt_fullname"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/textLight_color"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp" 
                        android:layout_marginTop="60dp"
                        android:layout_centerInParent="true" />
                    <TextView
                        android:id="@+id/username"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:textColor="@color/textLight_color"
                        android:textSize="17dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp" 
                        android:layout_marginTop="85dp"
                        android:layout_centerInParent="true" />
                </com.github.florent37.diagonallayout.DiagonalLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="false"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layoutDirection="ltr"
                android:src="@drawable/no_profile_image_circle"
                android:layout_alignBottom="@id/secoundrelative"
                android:layout_alignParentStart="true" />
            <at.markushi.ui.CircleButton
                android:id="@+id/follow_button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                app:cb_color="@color/accent"
                app:cb_pressedRingWidth="5dip"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:layout_alignBottom="@id/secoundrelative"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ic_add"
                android:layout_alignParentEnd="true" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layoutDirection="ltr"
                android:translationX="35dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/secoundrelative"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/Txt_flowersView"
                        android:text="@string/Lbl_Followers"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:textSize="10dp"
                        android:layout_alignBottom="@id/secoundrelative"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:id="@+id/Txt_flowers_count"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start" />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layoutDirection="ltr"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/secoundrelative"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/flowinglabelView"
                        android:text="@string/Lbl_Following"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:textSize="10dp"
                        android:layout_alignBottom="@id/secoundrelative"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:id="@+id/Txt_flowing_countView"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/section1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/secoundrelative"
                android:layout_marginTop="10dp">
                <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:id="@+id/Txt_AboutUser"
                    android:layout_marginEnd="21dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="?attr/colorPrimary"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
              android:id="@+id/toolbar"
              android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              app:titleTextAppearance="@style/Toolbar.TitleText"
              android:background="@null" /> 
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/Lbl_User_Info"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="start"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/genderLiner"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gender_icon"
                android:text="I"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_gravity="start"
                android:padding="15dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/gender_text"
                android:text="@string/Lbl_Gender"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_weight="8" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/locationLiner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/location_icon"
                android:text="I"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_gravity="start"
                android:padding="15dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/location_text"
                android:text="@string/Lbl_Location"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mobileLiner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mobile_icon"
                android:text="I"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_gravity="start"
                android:padding="15dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/mobile_text"
                android:text="@string/Lbl_Mobile"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/websiteLiner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/website_icon"
                android:text="I"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_gravity="start"
                android:padding="15dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/website_text"
                android:text="@string/Lbl_Website"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/workLiner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/work_icon"
                android:text="I"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="20dp"
                android:layout_width="50dp"
                android:layout_gravity="start"
                android:padding="15dp"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/work_text"
                android:text="@string/Lbl_Workplace"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:padding="15dp" />
        </LinearLayout>  
        <LinearLayout 
            android:orientation="vertical"
            android:id="@+id/mediaLiner"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mainLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="false">
                <LinearLayout
                    android:id="@+id/mainLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/iconTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="Ic"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="5dp" />
                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/textTitle"
                        android:textSize="13dp"
                        android:text="@string/Lbl_Media"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="0dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/textMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/Lbl_SeeAll"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="12dp"
                            android:padding="8dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                android:paddingStart="8dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
		<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
                android:text="@string/Lbl_Social_Links"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:padding="15dp" />
        </LinearLayout>
		<LinearLayout
            android:id="@+id/socialLiner"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">
            <at.markushi.ui.CircleButton
                android:id="@+id/facebook_button"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:cb_color="#ff3b5998"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_facebook_logo"
                android:layout_weight="0"
                android:layout_gravity="center" />
            <at.markushi.ui.CircleButton
                android:id="@+id/instegram_button"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:cb_color="#ff8a3ab9"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_instagram_logo"
                android:layout_weight="0"
                android:layout_gravity="center" />
            <at.markushi.ui.CircleButton
                android:id="@+id/twitter_button"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:cb_color="#ff55acee"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_twitter"
                android:layout_weight="0"
                android:layout_gravity="center" />
            <at.markushi.ui.CircleButton
                android:id="@+id/google_button"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:cb_color="#ffdd4b39"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_google_plus"
                android:layout_weight="0"
                android:layout_gravity="center" />
            <at.markushi.ui.CircleButton
                android:id="@+id/vk_button"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:cb_color="#ff45668e"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_vk"
                android:layout_weight="0"
                android:layout_gravity="center" />
            <at.markushi.ui.CircleButton
                android:id="@+id/youtube_button"
                android:layout_width="40dp"
                android:layout_height="40dip"
                app:cb_color="#ff0000"
                app:cb_pressedRingWidth="3dip"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_youtube_logo"
                android:layout_weight="0"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
	        <com.google.android.gms.ads.doubleclick.PublisherAdView
		        android:id="@+id/multiple_ad_sizes_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
		        app:adUnitId="@string/banner_multiple_ad_sizes_id" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>