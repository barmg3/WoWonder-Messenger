<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory android:layout="@xml/divider" />
	<!--PROFILE SECTION-->
	<PreferenceCategory android:key="CategoryAccount_key" android:title="@string/Lbl_Account_and_Profile">
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="editprofile_key"
			android:title="@string/Lbl_Edit_Profile_and_avatar" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="about_me_key"
			android:title="@string/Lbl_About" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="editAccount_key"
			android:title="@string/Lbl_My_Account" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="blocked_key"
			android:title="@string/Lbl_BlockedUsers" />
	</PreferenceCategory>

	<!--Security SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:key="SecurityAccount_key" android:title="@string/Lbl_Security">
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="editpassword_key"
			android:title="@string/Lbl_Password"
			android:summary="@string/Lbl_Change_your_password" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="Twofactor_key"
			android:title="@string/Lbl_TwoFactor" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="ManageSessions_key"
			android:title="@string/Lbl_ManageSessions" />

		<WoWonder.Activities.SettingsPreferences.Custom.CustomSwitchPreference
			android:title="@string/Lbl_FingerprintLock"
			android:summary="@string/Lbl_Summary_FingerprintLock"
			android:key="FingerprintLock_key"
			app:iconSpaceReserved="false"
			style="@style/SwitchCompatTheme"
			android:defaultValue="false" />

	</PreferenceCategory>

	<!--Display SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:key="Theme_key" android:title="@string/Lbl_Display">
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="Wallpaper_key"
			android:title="@string/Lbl_Wallpaper" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="Night_Mode_key"
			android:title="@string/Lbl_Theme" />
	</PreferenceCategory>

	<!--Storage SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:key="Storage_key" android:title="@string/Lbl_MediaAutoDownload">

		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="StorageConnectedMobile_key"
			android:title="@string/Lbl_StorageConnectedMobile" />

		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="StorageConnectedWiFi_key"
			android:title="@string/Lbl_StorageConnectedWiFi" />
	</PreferenceCategory>

	<!--Privacy SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:title="@string/Lbl_Privacy">
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="whocanfollow_key"
			android:title="@string/Lbl_Who_can_follow_me"
			android:defaultValue="@string/Lbl_Everyone" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="whocanMessage_key"
			android:title="@string/Lbl_Who_can_message_me"
			android:defaultValue="@string/Lbl_Everyone" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="whocanseemybirthday_key"
			android:title="@string/Lbl_Who_can_see_my_birthday"
			android:defaultValue="@string/Lbl_Following" />
	</PreferenceCategory>

	<!--Notification SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:title="@string/Lbl_Message_Notifications">
		<WoWonder.Activities.SettingsPreferences.Custom.CustomSwitchPreference
		  android:title="@string/Lbl_ChatHeads"
		  android:summary="@string/Lbl_EnableChatHead_SubTitle3"
		  android:key="chatheads_key"
		  app:iconSpaceReserved="false"
		  style="@style/SwitchCompatTheme"
		  android:defaultValue="false" />
		<WoWonder.Activities.SettingsPreferences.Custom.CustomSwitchPreference
			android:title="@string/Lbl_Notification_Popup"
		  android:summary="@string/Lbl_Summary_notifications"
		  android:key="notifications_key"
		  app:iconSpaceReserved="false"
		  style="@style/SwitchCompatTheme"
		  android:defaultValue="true" />
		<WoWonder.Activities.SettingsPreferences.Custom.CustomSwitchPreference
			android:title="@string/Lbl_ShowOnlineUsers"
		  android:summary="@string/Lbl_Summary_Onlineusers"
		  android:key="onlineuser_key"
		  app:iconSpaceReserved="false"
		  style="@style/SwitchCompatTheme"
		  android:defaultValue="true" />
		<WoWonder.Activities.SettingsPreferences.Custom.CustomCheckBoxPreference
			android:key="checkBox_PlaySound_key"
		  android:title="@string/Lbl_Conversation_tones"
		  android:summary="@string/Lbl_Summary_Play_sounds"
		  app:iconSpaceReserved="false"
		  android:defaultValue="true" />
	</PreferenceCategory>

	<!--GENERAL SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:key="category_General" android:title="@string/Lbl_General">
		<!--<ListPreference
      android:key="Lang_key"
      android:title="@string/Lbl_Language"
      android:defaultValue="English"
      android:entries="@array/Lang_array"
      android:entryValues="@array/Langunicode_array"
      android:summary="@string/Lbl_Display_your_app_Language"
      android:icon="@drawable/ic_translation_settings"
      android:dialogIcon="@drawable/ic_translation_settings" />-->
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="invite_key"
			android:title="@string/Lbl_Invite_Friends" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:id="@+id/Call_Pref"
			android:key="Call_key"
			android:title="@string/Lbl_Clear_call_log" />
	</PreferenceCategory>

	<!--SUPPORT SECTION-->
	<PreferenceCategory android:layout="@xml/divider" />
	<PreferenceCategory android:key="category_Support" android:title="@string/Lbl_Support">
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="RateApp_key"
			android:title="@string/Lbl_RateOurApp" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="help_key"
			android:title="@string/Lbl_Help" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="Report_key"
			android:title="@string/Lbl_Report_Problem" />

		<PreferenceCategory android:layout="@xml/divider" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="deleteaccount_key"
			android:title="@string/Lbl_DeleteAccount" />
		<WoWonder.Activities.SettingsPreferences.Custom.GeneralCustomPreference
			android:key="logout_key"
			android:title="@string/Lbl_Logout" />
	</PreferenceCategory>
</PreferenceScreen>